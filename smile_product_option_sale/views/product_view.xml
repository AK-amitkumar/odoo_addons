<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

    <record id="product_template_form_view" model="ir.ui.view">
      <field name="name">product.template.common.form</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="smile_product_option.product_template_form_view"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='option_ids']/tree/field[@name='is_mandatory']" position="after">
          <field name="is_included_in_price" attrs="{'readonly': ['|', ('is_mandatory', '=', False), ('quantity_type', '!=', 'identical')]}"/>
          <field name="is_hidden_in_sale_order" attrs="{'readonly': ['|', ('is_mandatory', '=', False), ('quantity_type', 'not in', ('identical', 'fixed'))]}"/>
        </xpath>
      </field>
    </record>

  </data>
</openerp>
