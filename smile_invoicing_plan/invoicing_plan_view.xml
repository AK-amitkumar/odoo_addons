<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data noupdate="0">

		<record model="ir.ui.view" id="view_invoicing_plan_form">
			<field name="name">account.invoicing_plan.form</field>
			<field name="model">account.invoicing_plan</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Invoicing Plan">
					<field name="name"/>
					<field name="trigger"/>
					<field name="term"/>
					<field name="mode"/>
					<group colspan="4" col="6">
						<field name="periodicity"/>
						<field name="uop"/>
						<field name="commitment"/>
					</group>
					<field name="line_ids" colspan="4" nolabel="1" />
						
					<label align="0.0" colspan="4" string="Only the first valid modality applies" />
				</form>
			</field>
		</record>
		
		
		
		<record model="ir.ui.view" id="view_invoicing_plan_tree">
			<field name="name">account.invoicing_plan.tree</field>
			<field name="model">account.invoicing_plan</field>
			<field name="type">tree</field>
			<field eval="7" name="priority"/>
			<field name="arch" type="xml">
				<tree string="Invoicing Plans">
					<field name="name"/>
					<field name="periodicity"/>
					<field name="commitment"/>
					<field name="uop"/>
				</tree>
			</field>
		</record>
        <record model="ir.ui.view" id="view_invoicing_plan_search">
            <field name="name">account.invoicing_plan.search</field>
            <field name="model">account.invoicing_plan</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Invoicing Plans">
                    <field name="name"/>
                    <field name="periodicity"/>
                    <field name="commitment"/>
                    <field name="uop"/>
                </search>
            </field>
        </record>

        <record id="action_invoicing_plan" model="ir.actions.act_window">
            <field name="name">Invoicing Plans</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.invoicing_plan</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_invoicing_plan_tree"/>
            <field name="search_view_id" ref="view_invoicing_plan_search" />
        </record>
        
        

        <menuitem action="action_invoicing_plan" id="menu_invoicing_plan" parent="base.menu_sale_config_sales" sequence="50" />
		
		<record model="ir.ui.view" id="view_invoicing_plan_line_form">
			<field name="name">account.invoicing_plan.line.form</field>
			<field name="model">account.invoicing_plan.line</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Modality">
					<field name="name" />
					<field name="sequence" />
					<field name="application_periods" colspan="4" />							
					<field name="invoicing_plan_sub_line_ids" colspan="4">
					<tree string="Sub modalities" editable="bottom">
						<field name="partner" />
						<field name="value" />
						<field name="value_amount" />
					</tree>
					</field>
				</form>
			</field>
		</record>

		<record model="ir.ui.view" id="view_invoicing_plan_line_tree">
			<field name="name">account.invoicing_plan.line.tree</field>
			<field name="model">account.invoicing_plan.line</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Modality">
					<field name="name" />
					<field name="sequence" />
					<field name="application_periods" colspan="4" />							
				</tree>
			</field>
		</record>
		
		<record model="ir.ui.view" id="view_invoicing_plan_sub_line_tree">
			<field name="name">account.invoicing_plan.sub.line.tree</field>
			<field name="model">account.invoicing_plan.sub.line</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Sub modalities">
					<field name="partner" />
					<field name="value" />
					<field name="value_amount" />
				</tree>
			</field>
		</record>
		
		<record model="ir.ui.view" id="view_invoicing_plan_sub_line_form">
			<field name="name">account.invoicing_plan.sub.line.form</field>
			<field name="model">account.invoicing_plan.sub.line</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Sub modalities">
					<field name="partner" />
					<field name="value" />
					<field name="value_amount" />
				</form>
			</field>
		</record>
		
	</data>
</openerp>
