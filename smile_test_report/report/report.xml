<openerp>
	<data>

		<report id="tests" model="ir.module.module" string="Tests Report" report_type="qweb-pdf" name="smile_test_report.test_report_view"
			file="Non-regression test report" attachment="(object.name)" />

		<template id="test_report_view">
			<t t-call="report.html_container">
				<t t-call="report.external_layout">
					<div class="page" style="margin-left: 3em">

						<h1>Non-regression Tests</h1>
						<p>
							This document provides a detailed description of non-regression tests.
						</p>

						<t t-foreach="sum(docs.get_tests().values(), [])" t-as="test">
							<h2>
								Test:
								<span t-esc="test[0]" />
							</h2>
							<p>
								File:
								<span t-esc="test[1]" />
							</p>
							<p>
								<ol>
									<t t-foreach="test[2]" t-as="comment">
										<li>
											<span t-raw="comment.replace('\n\n', '\n').replace('\n', '&lt;br&gt;')" />
										</li>
									</t>
								</ol>
							</p>
						</t>

					</div>
				</t>
			</t>
		</template>

	</data>
</openerp>
