<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_sys_log_search" model="ir.ui.view">
            <field name="name">sys.log.search</field>
            <field name="model">sys.log</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="System Logs">
                    <field name="name"/>
	                <field name="levelname"/>
                    <field name="message"/>
                    <field name="create_date"/>
                </search>
            </field>
        </record>
        <record id="view_sys_log_tree" model="ir.ui.view">
            <field name="name">sys.log.tree</field>
            <field name="model">sys.log</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="System Logs">
	                <field name="name"/>
	                <field name="module"/>
	                <field name="levelno"/>
	                <field name="levelname"/>
	                <field name="pathname"/>
	                <field name="lineno"/>
	                <field name="message"/>
	                <field name="msecs"/>
	                <field name="failed"/>
	                <field name="exception"/>
	                <field name="create_date"/>
	                <field name="create_uid"/>
                </tree>
            </field>
        </record>
        <record id="view_sys_log_form" model="ir.ui.view">
            <field name="name">sys.log.form</field>
            <field name="model">sys.log</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="System Log">
	                <field name="name"/>
	                <field name="module"/>
	                <field name="levelno"/>
	                <field name="levelname"/>
	                <field name="pathname"/>
	                <field name="lineno"/>
	                <field name="message" colspan="4"/>
	                <field name="msecs"/>
	                <field name="failed"/>
	                <field name="exception" colspan="4"/>
	                <field name="create_date"/>
	                <field name="create_uid"/>
                </form>
            </field>
        </record>
        <record id="action_sys_log" model="ir.actions.act_window">
            <field name="name">System Logs</field>
            <field name="res_model">sys.log</field>
            <field name="view_type">form</field>
        </record>
        <menuitem action="action_sys_log" id="menu_sys_log" parent="base.menu_audit"/>

	</data>
</openerp>