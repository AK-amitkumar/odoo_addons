<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

    <record id="product_template_form_view" model="ir.ui.view">
      <field name="name">product.template.common.form</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="product.product_template_form_view"/>
      <field name="arch" type="xml">
        <xpath expr="//page[position()=1]" position="after">
          <page string="Options">
            <field name="option_ids">
              <tree string="Product Options" editable="top">
                <field name="sequence" widget="handle"/>
                <field name="optional_product_id" required="1"/>
                <field name="quantity_type"/>
                <field name="fixed_quantity" attrs="{'readonly': [('quantity_type', '!=', 'fixed')]}"/>
                <field name="uom_id" groups="product.group_uom"/>
                <field name="is_mandatory"/>
              </tree>
            </field>
          </page>
        </xpath>
      </field>
    </record>

  </data>
</openerp>
