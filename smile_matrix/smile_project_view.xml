<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="0">

        <act_window name="Project matrix" res_model="smile.matrix" id="action_project_matrix" view_mode='form' target='new'/>

        <record model="ir.ui.view" id="view_project_form">
            <field name="name">smile_project.view_project</field>
            <field name="model">smile.project</field>
            <field name="type">form</field>
            <field name="priority">17</field>
            <field name="arch" type="xml">
                <form string="Project">
                    <field name="name" colspan="2"/>
                    <button type="object" name="matrix" string="Matrix" colspan="2"/>
                    <field name="start_date" colspan="2"/>
                    <field name="end_date" colspan="2"/>
                    <separator string="Project lines" colspan="4"/>
                    <field name="matrix_line_ids" colspan="4" widget="matrix"/>
                    <field name="line_ids" colspan="4" nolabel="1">
                        <tree string="Lines">
                            <field name="name"/>
                            <field name="hold_quantities"/>
                            <field name="cell_ids"/>
                        </tree>
                        <form string="Lines">
                            <field name="name"/>
                            <field name="hold_quantities"/>
                            <field name="cell_ids" colspan="4" nolabel="1" readonly="1">
                                <tree string="Cells">
                                    <field name="date"/>
                                    <field name="hold_quantities"/>
                                    <field name="cell_value_string" string="Cell value"/>
                                </tree>
                            </field>
                        </form>
                    </field>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_project_tree">
            <field name="name">smile_project.view_project</field>
            <field name="model">smile.project</field>
            <field name="type">tree</field>
            <field name="priority">17</field>
            <field name="arch" type="xml">
                <tree string="Project">
                    <field name="name"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="line_ids"/>
                </tree>
            </field>
        </record>

        <act_window name="Projects" res_model="smile.project" id="action_project_list"/>

        <menuitem action="action_project_list" id="menu_smile_project" name="Projects"/>

    </data>
</openerp>